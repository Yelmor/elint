{
  "name": "elint",
  "version": "1.0.0",
  "description": "A easy way to lint your code.",
  "main": "lib/elint.js",
  "bin": {
    "elint": "./bin/cli.js"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --format codeframe \"bin/**/*.js\" \"lib/**/*.js\" \"test/**/*.js\"",
    "test:unit": "nyc --reporter=html --reporter=text mocha \"test/**/*.spec.js\" && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keenwon/elint.git"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "standard",
    "jshint",
    "lint",
    "linter"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keenwon/elint/issues"
  },
  "homepage": "https://github.com/keenwon/elint#readme",
  "dependencies": {
    "@commitlint/core": "^6.2.0",
    "chalk": "^2.4.1",
    "co": "^4.6.0",
    "commander": "^2.15.1",
    "diff": "^3.5.0",
    "eslint": "^4.19.1",
    "execa": "^0.10.0",
    "figures": "^2.0.0",
    "fs-extra": "^6.0.1",
    "globby": "^8.0.1",
    "husky": "^1.0.0-rc.6",
    "ignore": "^3.3.8",
    "is-valid-glob": "^1.0.0",
    "left-pad": "^1.3.0",
    "lodash": "^4.17.10",
    "npmi": "^4.0.0",
    "stylelint": "^9.2.0",
    "supports-color": "^4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "debug": "^3.1.0",
    "deep-equal-in-any-order": "^1.0.10",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7"
  }
}
