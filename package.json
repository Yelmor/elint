{
  "name": "elint",
  "version": "1.8.0",
  "description": "A easy way to lint your code.",
  "main": "src/index.js",
  "bin": {
    "elint": "./bin/cli.js"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit:coverage && npm run test:system",
    "test:circleci": "npm run test:lint && npm run test:unit && npm run test:system",
    "test:appveyor": "npm run test:lint && npm run test:unit && npm run test:system",
    "test:lint": "eslint --format codeframe \"bin/**/*.js\" \"src/**/*.js\" \"test/**/*.js\" \"scripts/postinstall\" --fix",
    "test:system": "node test/system/utils/init.js && ava \"test/system/**/*.spec.js\" && node test/system/utils/clean.js",
    "test:unit": "mocha \"test/unit/**/*.spec.js\"",
    "test:unit:coverage": "nyc --reporter=html --reporter=text npm run test:unit && nyc report --reporter=text-lcov | coveralls",
    "postinstall": "node ./src/postinstall.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keenwon/elint.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "stylelint",
    "commitlint",
    "standard",
    "jshint",
    "lint",
    "linter",
    "husky",
    "hooks",
    "git hooks"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/keenwon/elint/issues"
  },
  "homepage": "https://github.com/keenwon/elint#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@commitlint/core": "^7.1.2",
    "chalk": "^2.4.1",
    "co": "^4.6.0",
    "commander": "^2.18.0",
    "debug": "^4.0.0",
    "diff": "^3.5.0",
    "eslint": "^5.5.0",
    "execa": "^1.0.0",
    "figures": "^2.0.0",
    "find-process": "^1.1.3",
    "fs-extra": "^7.0.0",
    "globby": "^8.0.1",
    "husky": "^1.0.1",
    "is-npm": "^2.0.0",
    "left-pad": "^1.3.0",
    "lodash": "^4.17.11",
    "md5": "^2.2.1",
    "minimatch": "^3.0.4",
    "semver": "^5.5.1",
    "semver-utils": "^1.1.2",
    "staged-git-files": "^1.1.1",
    "stylelint": "~9.6.0",
    "supports-color": "^5.5.0",
    "which": "^1.3.1",
    "write-json-file": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "ava": "^0.25.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "deep-equal-in-any-order": "^1.0.10",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.3.2"
  }
}
